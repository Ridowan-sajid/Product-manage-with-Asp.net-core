@model List<First.Model.Category>
@*we will take a model which type is List<Category>
*@

<partial name="_Notification"/>
@*@if (TempData["success"]!=null)
{
    <h2>@TempData["success"]</h2>
}*@

<div class="container">
    <div class="row">
        <div class="col-7 p-2">
            <h2>List of Category</h2>
        </div>
        <div class="col-5 p-2 " >
            <a class="nav-link text-white bg-dark fw-bold text-center" asp-controller="Category" asp-action="CreateCategory">Create Category</a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
@*        @foreach (var cat in Model)*@
        @foreach (var cat in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
            <td>
                <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@cat.Id" class="btn btn-dark">Update</a>
            </td>
                <td>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@cat.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>
